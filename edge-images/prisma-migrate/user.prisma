type User {
  id: ID! @id
  updatedAt: DateTime! @updatedAt
  createdAt: DateTime! @createdAt
  name: String!
  email: String! @unique
  phone: String! @unique
  verified: Boolean! @default(value: false)
  password: String!
  authyId: String! @unique
  role: UserRole! @default(value: USER)
}

enum UserRole {
  ADMIN
  USER
  SUPPORT
}
