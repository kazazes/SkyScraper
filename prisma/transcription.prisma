type Transcription {
    id: ID! @id
    updatedAt: DateTime! @updatedAt
    createdAt: DateTime! @createdAt
    call: TrunkedCall!
    languageModel: String!
    beta: Float!
    body: String!
    words: [TranscriptionWord]! @relation(name: "WordsOnTranscription" onDelete: CASCADE)
    duration: Float!
    alpha: Float!
}

type TranscriptionWord {
    id: ID! @id
    updatedAt: DateTime! @updatedAt
    createdAt: DateTime! @createdAt
    text: String!
    transcription: Transcription! @relation(name: "WordsOnTranscription")
    confidence: Float!
    end: Int!
    start: Int!
}
