{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "description": "Skyscraper Edge API server.",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "rimraf dist && tsc && mkdir -p dist/common/swagger && cp server/common/swagger/Api.yaml dist/common/swagger",
    "watch": "tsc -w",
    "dev": "nodemon server/index.ts | pino-pretty",
    "dev:debug": "nodemon --inspect-brk dist/index.js | pino-pretty",
    "test": "mocha test/**/*.ts --exit",
    "test:debug": "mocha --inspect-brk test/**/*.ts --exit"
  },
  "dependencies": {
    "bluebird": "^3.5.3",
    "body-parser": "^1.18.3",
    "concat-stream": "^2.0.0",
    "cookie-parser": "^1.4.3",
    "dockerode": "^2.5.7",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "json-stringify-safe": "^5.0.1",
    "lodash": "^4.17.11",
    "node-docker-api": "^1.1.22",
    "pino": "^5.8.1",
    "swagger-express-middleware": "^2.0.0",
    "usb": "^1.5.0",
    "usbinfo": "https://github.com/kazazes/usbinfo.git"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.24",
    "@types/chai": "^4.1.4",
    "@types/concat-stream": "^1.6.0",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/lodash": "^4.14.119",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.15",
    "@types/pino": "^5.20.0",
    "@types/shelljs": "^0.8.1",
    "@types/swagger-express-middleware": "^1.0.9",
    "@types/usb": "^1.1.7",
    "nodemon": "^1.18.6",
    "pino-pretty": "^2.2.3",
    "rimraf": "^2.6.2",
    "shelljs": "^0.8.3",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6"
  }
}
