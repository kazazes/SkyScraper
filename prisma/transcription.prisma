type Transcription {
    id: ID! @id
    callId: TrunkedCall @relation(name: "TranscriptionOnCall")
    languageModel: String!
    beta: Float!
    body: String!
    words: [TranscriptionWord]! @relation(name: "WordsOnTranscription" onDelete: CASCADE)
    duration: Float!
    alpha: Float!
}

type TranscriptionWord {
    id: ID! @id
    text: String!
    confidence: Float!
    end: Int!
    start: Int!
}
